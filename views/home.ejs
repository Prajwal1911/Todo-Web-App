
<%- include('./partials/header') %>

<div class="container d-flex flex-column align-items-center justify-content-center vh-100 border ">
      <div class="todo-container bg-black">
        <h1 class="text-white mb-5"><i class="fa fa-list" aria-hidden="true"></i> Todo Application</h1>
        <form action="/add-todo" method="post" class="d-flex mb-5">
          <input type="text" name="todo" class="form-control" placeholder="Enter Your Task">
          <button type="submit" class="btn btn-primary btn-md mx-3"><i class="fa fa-plus-square" aria-hidden="true"></i>
          </button>
        </form>
      
        <div class="list">
          <ul class="list-group">
            <% todo.forEach(todos => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
                <input type="checkbox" id="myCheckbox" name="myCheckbox">
                <span class="tasks font-weight-bolder mx-3"><%= todos.todo %></span>
                <a href="/delete-todo/<%= todos._id %>"><i class="fa  fa-times" aria-hidden="true" ></i>
                </a>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
      
</div>
  
<%- include('./partials/footer') %>